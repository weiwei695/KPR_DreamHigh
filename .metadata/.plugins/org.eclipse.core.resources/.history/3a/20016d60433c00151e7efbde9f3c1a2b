//@module
exports.pins = {
	serial: {type: "Serial", baud: 9600  }
};

exports.configure = function(){
	// initialize the serial port
	this.serial.init();
	trace("1");
}


exports.MCU_command = function(){
	//trace("xu\n");
	this.serial.write("12345");
	//trace("tian\n");
	//sensorUtils.delay(2);
	trace("ming\n");
	var response = this.serial.read( "Array", 5, 50 );
	trace( response[0] + "\n");
	return response;
	//trace("ming\n");
}

exports.close = function(){
	this.serial.close();
}