	<handler path="/info">
		<behavior>
			<method id="onInvoke" params="handler, message"><![CDATA[
				message.responseText = JSON.stringify( { port: serverPort, name: serverName, rackState: rackState } );            
			]]></method>
		</behavior>
	</handler>
  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++ -->
